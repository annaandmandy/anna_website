    "END_DISPOSAL": {
        "title": "Ending D: Special Treatment",
        "dialogue": [
            {
                "speaker": "Narrator",
                "text": "===================="
            },
            {
                "speaker": "System",
                "text": "ENDING REACHED"
            },
            {
                "speaker": "Narrator",
                "text": "===================="
            },
            {
                "speaker": "Staff",
                "text": "You look exhausted."
            },
            {
                "speaker": "Staff",
                "text": "Some guests need a little extra care before leaving."
            },
            {
                "speaker": "Me",
                "text": "I just want to go home."
            },
            {
                "speaker": "Staff",
                "text": "Of course."
            },
            {
                "speaker": "Staff",
                "text": "This will help you feel better."
            },
            {
                "speaker": "Narrator",
                "text": "The staff member guides me toward a deeper pool."
            },
            {
                "speaker": "Narrator",
                "text": "The water is far hotter than the others."
            },
            {
                "speaker": "Me",
                "text": "This doesn't feel right..."
            },
            {
                "speaker": "Staff",
                "text": "That's just the heat relaxing your body."
            },
            {
                "speaker": "Narrator",
                "text": "Something massive shifts beneath the surface."
            },
            {
                "speaker": "Narrator",
                "text": "A dark fin cuts through the water."
            },
            {
                "speaker": "Me",
                "text": "W-Wait—!"
            },
            {
                "speaker": "Narrator",
                "text": "I lose my balance and fall in."
            },
            {
                "speaker": "Narrator",
                "text": "Teeth tear into my body."
            },
            {
                "speaker": "Me",
                "text": "AAAAAH—!"
            },
            {
                "speaker": "Narrator",
                "text": "The water churns violently."
            },
            {
                "speaker": "Narrator",
                "text": "My screaming is swallowed by the pool."
            },
            {
                "speaker": "Staff",
                "text": "Thank you for your cooperation."
            },
            {
                "speaker": "Narrator",
                "text": "===================="
            },
            {
                "speaker": "System",
                "text": "GAME OVER"
            },
            {
                "speaker": "Narrator",
                "text": "===================="
            }
        ],
        "epilogue": "Some guests never leave the facility.",
        "stats": {
            "discovery": "irrelevant",
            "survival": false,
            "mental_state": "Consumed"
        }
    },
